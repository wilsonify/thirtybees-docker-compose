	<?php foreach ($this->language->getIsoList() as $iso): ?>
		<option value="<?php echo $iso ?>" <?php if ($iso == $this->language->getLanguageIso()) echo 'selected="selected"' ?>>
			<?php echo $this->language->getLanguage($iso)->getMetaInformation('name') ?>
		</option>
	<?php endforeach; ?>
	</select>
